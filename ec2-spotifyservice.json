{
    "AWSTemplateFormatVersion": "2010-09-09",

    "Description": "AWS node ec2 instance for spotify service api ",

    "Resources":{
        "SpotifyService":{
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "ImageId" : "ami-035be7bafff33b6b6",
                "InstanceType" : "t2.micro",
                "IamInstanceProfile" :  {
                    "Ref" : "s3FullProfile"
                  },
                "KeyName" : "spotifyservice",
                "SecurityGroups" : [ "spotifyService" ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "yum update -y\n",
                                "curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.32.0/install.sh | bash\n",
                                ". ~/.nvm/nvm.sh\n",
                                "nvm install 10\n",
                                "sudo yum install git -y\n",
                                "HOME=/root\n",
                                "sudo git clone https://github.com/scmilee/AWSFun.git\n",
                                "cd AWSFun/spotifyservice\n",
                                "npm install\n",
                                "npm start\n"
                            ]
                        ]
                    }
                }
            }
        },
        "s3FullProfile" : {
        "Type" : "AWS::IAM::InstanceProfile",
        "Properties" : {
            "Path" : "/",
            "Roles" : [
               "s3Full"
            ]
        }
        }
    }
}